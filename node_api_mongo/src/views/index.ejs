<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>

    <div class="container">
        <h1>
            <%= title %>
        </h1>
        <form action="/add" method="post">

            <Legend>
                Add a Productos
            </Legend>

            <div class="form-group">
                <input type="text" id="nombre" class="form-control" type="text" name="nombre"
                    placeholder="Add a nombre">
            </div>
            <br>
            <div class="form-group">

                <input type="text" id="imagen" class="form-control" type="image" name="imagen"
                    placeholder="Add a imagen">
            </div>
            <br>
            <div class="form-group">
                <input type="text" id="precio" class="form-control" type="text" name="precio"
                    placeholder="Add a precio">
            </div>
            <br>
            <div class="form-group">
                <input type="text" id="tallas" class="form-control" type="text" name="tallas"
                    placeholder="Add a tallas">
            </div>
            <br>
            <div class="form-group mx-sm-3">
                <textarea class="form-control" name="description" rows="3" cols="80"
                    placeholder="Add a description"></textarea>
                </textarea>
            </div>
            <br>
            <div class="form-group">
                <input type="text" id="categoria" class="form-control" type="text" name="categoria"
                    placeholder="Add a categoria">
            </div>
            <br>
            <div class="form-group">
                <input type="text" id="section" class="form-control" type="text" name="section"
                    placeholder="Add a section">
            </div>
            <br>
            <button class="btn btn-primary" type="submit">
                Add
            </button>
        </form>

    </div>
    <hr>
    <table class="table table-bordered table-hover">
        <thead class="thead-inverse">

                <th>#</th>
                <th>Nombre</th>
                <th>Imagen</th>
                <th>Precio</th>
                <th>Tallas</th>
                <th>Nombre</th>
                <th>Description</th>
                <th>Categoria</th>
                <th>Section</th>
                <th>operations</th>

        </thead>
        <tbody>

            <% for(var i=0; i < productos.length; i++) {%>

                    <td>
                        <%= i + 1 %>
                    </td>
                    <td>
                        <strong>
                            <%= productos[i].nombre %>
                        </strong>
                    </td>

                    <td>
                        <strong>
                            <img src="<%= productos[i].imagen %>" alt="DescripciÃ³n de la imagen" width="250"
                                height="250">
                        </strong>
                    </td>

                    <td>
                        <strong>
                            <%= productos[i].precio %>
                        </strong>
                    </td>

                    <td>
                        <strong>
                            <%= productos[i].tallas %>
                        </strong>
                    </td>

                    <td>
                        <strong>
                            <%= productos[i].description %>
                        </strong>
                    </td>

                    <td>
                        <strong>
                            <%= productos[i].categoria %>
                        </strong>
                    </td>

                    <td>
                        <strong>
                            <%= productos[i].section %>
                        </strong>
                    </td>

                    <td>
                        <a class="btn btn-warning" href="/edit/<%=productos[i].id %>">Actualizar</a>

                        <a class="btn btn-danger" href="/delete/<%=productos[i].id %>">Borrar</a>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>
    </div>
    <script>
        document.getElementById('nombre').focus();
    </script>
</body>

</html>